  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%= position.title %></td>
    <td><%= position.description %></td>
    <td><%= link_to 'Show', admin_position_path(position) %></td>
    <td><%= link_to 'Assign' , assign_admin_position_path(position)  %></td>
    <td><%= link_to 'Edit', edit_admin_position_path(position) %></td>
    <td><%= link_to 'Destroy', admin_position_path(position), confirm: 'Are you sure?', method: :delete %></td>
    
  </tr>
<% end %>
</table>

