<%= form_for(@duty) do |f| %>
  <% if @duty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@duty.errors.count, "error") %> prohibited this duty from being saved:</h2>

      <ul>
      <% @duty.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br />
    <%= f.date_select :deadline %>
  </div>
  <div class="field">
    <%= f.label :assignee %><br />
    <%= f.collection_select :duty, :user_ids, User.find(:all, :order => :last_name), :id, :name, { :selected => @duty.user_ids }, { :multiple => true, :name => 'duty[user_ids][]' } %>
    <!--
    <%= assignee_name = "" %>
    
    <%= name = Array.new(assignee_name.split(' ')) %>
    <%= User.where(:first_name => name[0], :last_name => name[1])%>
    -->
  </div>
  
  <div class="field">
    <%= f.label :assigner %><br />
    <%= f.number_field :assigner %>
  </div>

  <div class="field">
    <%= f.label :penalty %><br />
    <%= f.text_field :penalty %>
  </div>
  <div class="field">
    <%= f.label :confirmation %><br />
    <%= f.check_box :confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
