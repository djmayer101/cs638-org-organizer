
<h1>Listing duties</h1>
<br>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Description</th>
 	<th>Deadline</th>
    <th>Assigner</th>
    <th>Penalty</th>
    <th>Confirmation</th>
  </tr>
<% @duties.each do |duty| %>
  <tr>
    <td><%= duty.title %></td>
    <td><%= duty.description %></td>
    <td><%= duty.deadline %></td>
    <td><%= duty.assigned_user.first_name + " " + duty.assigned_user.last_name %></td>
    <td><%= duty.penalty %></td>
    <td><%= duty.confirmation %></td>
    
    <% @permission = false %>
    <% current_user.positions.each do |pos|%>
    	<%if pos.addDuties == true%>
    		<%@permission = true %>
    	<% end %>
    <%end%>
    <% if current_user.admin == true%>
		<%@permission = true%>
	<%end%>
    <% if @permission == true	%>
    	<td><%= link_to 'Assign', assign_duty_path(duty)%></td>
    	<td><%= link_to 'Show', duty %></td>
    	<td><%= link_to 'Edit', edit_duty_path(duty) %></td>
    	<td><%= link_to 'Destroy', duty, confirm: 'Are you sure?', method: :delete %></td>
  	<%end%>
  </tr>
<% end %>
</table>

<br />
<% if @permission == true	%>
	<%= link_to 'New Duty', new_duty_path %>
<%end%>
<div id = "filter_duties_checkboxlist">
<br />
Search:
<br />
<%= form_for @search do |f| %>
	<p>
	<%= f.label :title_contains %>
	<%= f.text_field :title_contains %>	
	</p>
	<p class="button"><%= f.submit "Search" %></p>
	<%end%>

</div>
