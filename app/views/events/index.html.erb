		<th>Formality lvl</th>
		<th>Owner</th>
		<th>Location</th>
	</tr>
	<% @events.each do |event| %>
	<tr>
		<td><%= event.title %></td>
		<td><%= event.start_date %></td>
		<td><%= event.formality_lvl %></td>
		<td><%= event.owner %></td>
		<td><%= event.location %></td>
